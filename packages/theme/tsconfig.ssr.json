{
  "extends": "@ribajs/tsconfig",
  "files": [
    "./scripts/ssr.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "types": ["node"],
    "sourceMap": true,
    "outDir": "assets",
    "incremental": true,
    "baseUrl": "scripts"
  },
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "assets"
  ]
}
